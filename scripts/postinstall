#!/bin/sh

if [ -n "$SUDO_USER" ]; then
	export USER=$SUDO_USER
fi

echo USER: $USER
echo $USER > /tmp/USER

function error {
	cat /tmp/install-fuse.err
	exit 1
}

su "$USER" -c 'bash /tmp/install-fuse.sh 2> /tmp/install-fuse.err > /tmp/install-fuse.log' || error

# Reset permissions
#chown -R root:wheel /Applications/fuse\ X.app
#chmod +x /Applications/fuse\ X.app/Contents/SketchImporter/fondu

echo Success
